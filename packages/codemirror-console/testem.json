{
  "framework": "mocha",
  "serve_files": [
    "browserified.js"
  ],
  "src_files": [
    "lib/*.js",
    "test/*.js"
  ],
  "before_tests": "browserify test/mirror-console-test.js -o browserified.js -d -t espowerify",
  "on_exit": "rm browserified.js",
  "launch_in_dev": [
    "chrome"
  ],
  "launch_in_ci": [
    "chrome",
    "firefox"
  ],
  "browser_args": {
    "Chrome": {
      "mode": "ci",
      "args": [
        "--disable-gpu",
        "--headless",
        "--no-sandbox",
        "--remote-debugging-port=0",
        "--window-size=1440,900"
      ]
    },
    "Firefox": {
      "mode": "ci",
      "args": [
        "--headless",
        "--window-size=1440,900"
      ]
    }
  }
}
